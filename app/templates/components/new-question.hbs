{{#if addNewQuestion}}
  <h1>New Question</h1>
  <br>
    <div>
      <form>
        <div class="form-group">
          <label for="question">Question</label>
          {{input value=question id="question"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="details">Question Details</label>
          {{input value=details id="details"}}
        </div>

        <br>
        <button class="btn btn-success btn-xs"{{action 'save1'}}>Submit</button>
      </form>
    </div>

{{else}}
  <button class="btn btn-primary btn-xs" {{action 'questionFormShow'}}>Ask Question</button>
{{/if}}
