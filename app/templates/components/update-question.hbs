{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s Question</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="question">Question</label>
          {{input value=question id="question" placeholder=question.question}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="details">Details</label>
          {{input value=details id="details" placeholder=question.details}}
        </div>

        <button class="btn btn-success btn-xs" {{action 'update' question}}>Update</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-info btn-xs" {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
